#include<stdio.h>
int main()
{
        int i,arr[20], n, key, flag = 0;
        printf("enter the size of array\n");
        scanf("%d", &n);
        for(i = 0; i<n; i++)
        {
        printf("enter the elements of array\n");

        
                scanf("%d", &arr[i]);
        }
        printf("enter the key element\n");
        scanf("%d", &key);
        for(i = 0; i<n; i++)
        {
               if (arr[i] == key)
                {
                        flag = 1;
                        break;
                }
        }
        if ( flag == 1 )
        {
                printf("element found at location %d" , i+1);
        }
        else
        {
                printf("element not found");
        }
        return 0;
}

